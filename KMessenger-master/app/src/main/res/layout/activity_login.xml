<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:background="@android:color/holo_green_light">
    <EditText
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/l_email" android:layout_marginTop="32dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="32dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="32dp"
            android:layout_marginStart="32dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="32dp"
            android:background="@drawable/rounded_edittext_rl" android:hint="E-mail" android:paddingLeft="16dp"
            app:layout_constraintHorizontal_bias="1.0"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/l_password"
            android:background="@drawable/rounded_edittext_rl"
            app:layout_constraintEnd_toEndOf="@+id/l_email"
            app:layout_constraintStart_toStartOf="@+id/l_email"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/l_email"
            android:hint="Password" android:paddingLeft="16dp"/>
    <Button
            android:text="Login"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_button"
            android:id="@+id/l_button" app:layout_constraintStart_toStartOf="@+id/l_password"
            app:layout_constraintEnd_toEndOf="@+id/l_password"
            android:layout_marginTop="8dp"
            android:textColor="@android:color/white"
            app:layout_constraintTop_toBottomOf="@+id/l_password"/>
    <TextView
            android:text="Back to registration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/back_to_register" app:layout_constraintEnd_toEndOf="@+id/l_button"
            app:layout_constraintStart_toStartOf="@+id/l_button" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/l_button"
            android:textColor="@android:color/white"
            android:textSize="16sp"
    />
</android.support.constraint.ConstraintLayout>